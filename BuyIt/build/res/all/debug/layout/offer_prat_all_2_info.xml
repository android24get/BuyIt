<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/info_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
        android:orientation="horizontal"
        android:gravity="center"
        style="?android:borderlessButtonStyle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/collections_labels">
            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="10€"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@android:color/darker_gray">
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5.75€"
                android:textSize="@dimen/text_size_medium">
            </TextView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4.25€"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@android:color/holo_red_light">
            </TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
        android:orientation="horizontal"
        android:gravity="center"
        style="?android:borderlessButtonStyle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/device_access_time">
            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="Only today"
                android:gravity="center"
                android:textSize="@dimen/text_size_medium">
            </TextView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
        android:orientation="horizontal"
        android:gravity="center"
        style="?android:borderlessButtonStyle">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/collections_new_label">
            </ImageView>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center"
                android:text="Unlimited"
                android:textSize="@dimen/text_size_medium">
            </TextView>

        </LinearLayout>

</LinearLayout>


