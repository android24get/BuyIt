<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme"
           parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>


    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@android:color/holo_blue_light</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/actionBar_Text</item>
    </style>

    <style
        name="explore_button"  parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fortyeight_standard_visual_rhythm</item>
        <item name="android:text">@string/explore</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/gray_fifty</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style
        name="offer_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/choose_location_image_height</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style
        name="choose_location_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/choose_location_image_height</item>

        <item name="android:foreground">?android:selectableItemBackground</item>
    </style>

    <style
        name="info_button" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:layout_width">@dimen/fortyeight_standard_visual_rhythm</item>
        <item name="android:layout_height">@dimen/fortyeight_standard_visual_rhythm</item>
        <item name="android:src">@drawable/about</item>
    </style>

    <style
        name="info_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">?android:dividerHorizontal</item>
        <item name="android:background">@color/gray_fifteen</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style
        name="login_button">login_button>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/fortyeight_standard_visual_rhythm</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
    </style>

    <style
        name="login_button_google" parent="login_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/fortyeight_standard_visual_rhythm</item>
        <item name="android:background">@drawable/btn_google_sign</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
