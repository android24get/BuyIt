<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_cyan_to_black">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="@dimen/activity_margin_double">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/activity_margin">

            <LinearLayout
                android:id="@+id/choose_location_card_flip_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card"
                android:layout_marginBottom="@dimen/activity_margin"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_place"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/el_prat_airport"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"/>

                    <ImageButton
                        android:id="@+id/flip_button_1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                        android:src="@drawable/about"
                        style="?android:borderlessButtonStyle"
                        android:onClick="launch_choose_location_flipCard"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/choose_location_card_image_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    android:onClick="launch_choose_location_flipCard"
                    android:layout_marginBottom="@dimen/card_elements_divider_space">

                </FrameLayout>

                <Button
                    android:id="@+id/choose_location_card_explore_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:text="@string/explore"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:onClick="launch_location"
                    android:background="@drawable/button_explore">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choose_location_card_flip_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/card_elements_divider_space">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_place"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/sants_estacio"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"/>

                    <ImageButton
                        android:id="@+id/flip_button_3"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                        android:src="@drawable/about"
                        style="?android:borderlessButtonStyle"
                        android:onClick="launch_choose_location_flipCard"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/choose_location_card_image_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    android:onClick="launch_choose_location_flipCard"
                    android:layout_marginBottom="@dimen/card_elements_divider_space">

                </FrameLayout>

                <Button
                    android:id="@+id/choose_location_card_explore_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:text="@string/explore"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:onClick="launch_location"
                    android:background="@drawable/button_explore">
                </Button>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/choose_location_card_flip_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card"
                android:layout_marginBottom="@dimen/activity_margin"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_place"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="@string/maremagnum"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"/>

                    <ImageButton
                        android:id="@+id/flip_button_2"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                        android:src="@drawable/about"
                        style="?android:borderlessButtonStyle"
                        android:onClick="launch_choose_location_flipCard"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/choose_location_card_image_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    android:onClick="launch_choose_location_flipCard"
                    android:layout_marginBottom="@dimen/card_elements_divider_space">

                </FrameLayout>

                <Button
                    android:id="@+id/choose_location_card_explore_2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:text="@string/explore"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:onClick="launch_location"
                    android:background="@drawable/button_explore">
                </Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/choose_location_card_flip_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/card_elements_divider_space">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location_place"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/WTC"
                        android:textSize="@dimen/text_size_medium"
                        android:gravity="center_vertical"/>

                    <ImageButton
                        android:id="@+id/flip_button_4"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                        android:src="@drawable/about"
                        style="?android:borderlessButtonStyle"
                        android:onClick="launch_choose_location_flipCard"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/choose_location_card_image_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_image_height"
                    android:onClick="launch_choose_location_flipCard"
                    android:layout_marginBottom="@dimen/card_elements_divider_space">

                </FrameLayout>

                <Button
                    android:id="@+id/choose_location_card_explore_4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fortyeight_standard_visual_rhythm"
                    android:text="@string/explore"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:onClick="launch_location"
                    android:background="@drawable/button_explore">
                </Button>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>